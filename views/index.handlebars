<div class="row text-center">

    <div class="col">
        <br>
        <img style="width: 200px; height: 200px;" src="/assets/img/cheeseburger.png" alt="Burger">
    </div>
</div>
<div class="row">
    <div class="col">
        <br>
        <h1 class="text-center">Eat-Da-Burger!!!</h1>
        <hr>
    </div>
</div>

<div class="row justify-content-around">
    <div class="col-6">
        <h3>Burgers to be Devoured!</h3>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>{{id}}. {{burger_name}}
                <input type="text" id="customer" name="name" placeholder="Customer?">
                <button class="devour-btn" data-id="{{id}}">Devour it!</button>


            </li><br>

            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="col-4">
        <h3>Burgers You Devoured!</h3>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{id}}. {{burger_name}} - Eaten By {{Customer.name}} <button class="delete-btn" data-id="{{id}}">Delete</button></li><br>

            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>

<div class="row">
    <div class="col text-center">

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
                <button id="submit-btn" type="submit">Add Burger</button>
            </div>


        </form>

        <br><br>

    </div>
</div>